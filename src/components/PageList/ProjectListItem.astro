---
import Icon from "astro-icon";

const { projectUrl, title, icon, sourceUrl, liveUrl } = Astro.props;
---

<li class="project">
  <a class="title-link" href={projectUrl}>
    <span class="icon">
      <Icon name={`icon-project-${icon}`} />
    </span>
    <h3>{title}</h3>
  </a>
  <a class="external-link" href={`https://github.com/${sourceUrl}`}>Source</a>
  <a class="external-link" href={liveUrl}>Live</a>
</li>


<style>
  @import "../../styles/vars.css";
  @import "../../styles/mixins/mixins.css";

  .project {
    display: grid;
    grid-template-columns: 1fr max-content max-content;
    column-gap: 2rem;
  }

  .title-link {
    display: grid;
    grid-template-columns: 28px 1fr;
    gap: 1rem;
    &:hover {
      color: $blue;
    }
  }

  .external-link {
    font-size: 0.875rem;
    &:hover {
      color: $blue;
    }
  }

  .project :global(svg) {
    width: 26px;
  }

  /* Cleanup on small mobile */
  @media (max-width: 413px) {
    .project {
      grid-template-columns: 1fr;
    }
    
    .external-link {
      display: none;
    }
  }


</style>