---
import SiteLayout from "@layouts/SiteLayout.astro";
import Container from "@components/UI/Container.astro";
import ArticleHero from "@components/Heros/ArticleHero.astro";
import Markdown from '@components/Markdown/Markdown.astro';
import '@styles/prism.css';

const { content } = Astro.props;
---

<SiteLayout title={content.title} description={content.description}>
  <Container maxWidth="650px">
    <ArticleHero title={content.title} date={content.date} tags={content.tags} />
    <Markdown>
      <slot />
    </Markdown>
  </Container>
</SiteLayout>