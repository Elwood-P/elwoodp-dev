---
import '../styles/normalize.css';
import '../styles/vars.css';

import Head from '../components/Head.astro';
import PageHeader from '../components/PageHeader.astro'
import Footer from '../components/Footer.astro';

const { title = "elwoodp.dev", description = "Learning to code again, projects and articles by Paul Littlewood" } = Astro.props;
---

<html lang="en">
<!-- Head Component: Move to component but broken - suspected bug: https://github.com/withastro/astro/issues/3819 -->
<head>
  <meta charset="utf-8" />
  <meta name="description" property="og:description" content={description} />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
  <link rel="icon" href="/favicon.svg" />
</head>
<!-- END Head Component -->
<body>
  <PageHeader />
  <slot />
  <Footer />
</body>
</html>


<style>
  body {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }
</style>